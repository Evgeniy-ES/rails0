<h1>Test: <%= @test.title %></h1>
<%= link_to "New Test", new_admin_test_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Level</th>
    <th>Author</th>
    <th>Question</th>
    <th colspan="3">Action</th>
  </tr>
  <%= render @test %>
</table>

<br>

<h2>Questions:</h2>

<%= link_to "Create question", new_test_question_path(@test.id) %>

<table>
  <thead>
  <tr>
    <th>Question</th>
    <th>Test ID</th>
    <th colspan="3">Action</th>
  </tr>
  </thead>
  <%= render partial: 'admin/questions/question', collection: @test.questions %>
</table>

<%= link_to "Back", admin_tests_path %>
